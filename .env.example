# Slack Configuration (REQUIRED)
# Get your bot token from https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-bot-token-here

# Slack channel ID where posts will appear
# Get this from channel URL: https://app.slack.com/client/T.../C1234567890
SLACK_CHANNEL_ID=C1234567890

# Database Configuration
DATABASE_PATH=./data/feeds.db

# Feed Checking Configuration
# How often to check feeds (in seconds)
# 3600 = 1 hour, 1800 = 30 minutes
CHECK_INTERVAL=3600

# Relevance Filtering
# Minimum relevance score (0.0 to 1.0) required to post to Slack
MIN_RELEVANCE_SCORE=0.5

# Maximum number of items to post per check cycle
MAX_POSTS_PER_RUN=10

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Timezone (optional)
# Used for scheduling and timestamps
TIMEZONE=UTC
